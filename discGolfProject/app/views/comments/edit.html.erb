<% if session[:user_id] %>
	<p><strong>Logged in user: </strong><%= @loggedInUser.first_name %> <%=@loggedInUser.last_name %></p>
<% end %>

<!-- edit a comment -->
<h1>Edit your comment</h1>
<form action="/comments/<%= @comment.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="hidden" name="comment[user_id]" value="<%= @user.id %>">
	<input type="hidden" name="comment[course_id]" value="<%= @course.id %>">
	<p>
		<textarea name="comment[content]"><%= @comment.content %></textarea>
	</p>
	<input type="submit" value="Edit this comment">
</form>